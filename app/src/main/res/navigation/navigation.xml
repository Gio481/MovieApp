<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movieapp.presentation.ui.movie_details.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" >
        <action
            android:id="@+id/action_movieDetailsFragment_to_moviesCollectionFragment"
            app:destination="@id/moviesCollectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.movieapp.presentation.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_moviesCollectionFragment"
            app:destination="@id/moviesCollectionFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/moviesCollectionFragment"
        android:name="com.example.movieapp.presentation.ui.movies_collection.MoviesCollectionFragment"
        android:label="fragment_movies_collection"
        tools:layout="@layout/fragment_movies_collection" >
        <action
            android:id="@+id/action_moviesCollectionFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
</navigation>