<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_150_dp"
    android:layout_height="@dimen/dimen_250_dp"
    android:layout_margin="@dimen/dimen_20_dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moviePosterImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintBottom_toTopOf="@id/releaseDateTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/releaseDateTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30_dp"
        android:layout_marginVertical="@dimen/dimen_2_dp"
        android:background="@drawable/favorite_movies_text_view_background"
        android:gravity="start|center"
        android:paddingHorizontal="@dimen/dimen_5_dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/ratingTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ratingTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30_dp"
        android:background="@drawable/favorite_movies_text_view_background"
        android:gravity="start|center"
        android:paddingHorizontal="@dimen/dimen_5_dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>